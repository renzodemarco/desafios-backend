<div class="container">

    {{#if expired}}
        <p class="error">El link expiró, por favor intente de nuevo</p>
    {{/if}}

    <h1>Recuperar contraseña</h1>

    <form method="post" id="form">
            <label for="email">Correo electrónico:</label>
        <input type="text" name="email" id="email">

        <input class='blue-button' type="submit" value="Recuperar">
    </form>

    <button class='grey-button' onclick="redirect('http://localhost:8080/')">Volver</button>

</div>

<script src="./js/recoverPassRequest.js"></script>

<script>
    function redirect(url) {
        window.location.href = url
    }
</script>